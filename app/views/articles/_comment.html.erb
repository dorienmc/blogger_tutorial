<!--Partial for comments on an article, rendered for each comment by using 'collection: @article.comments'-->
<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Comment by <%= comment.author_name %></h4>
    <p> Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</p>
  </div>
  <div class="panel-body"><%= comment.body %></div>
</div>