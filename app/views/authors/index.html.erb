<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.username %></td>
        <td><%= author.email %></td>
        <td><button class="btn btn-default"><%= link_to 'Show', author %></button></td>
        <td><button class="btn btn-default"><%= link_to 'Edit', edit_author_path(author) %></button></td>
        <td><button class="btn btn-danger"><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-success"><%= link_to 'New Author', new_author_path %></button>
