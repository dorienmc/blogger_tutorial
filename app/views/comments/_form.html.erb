<h3 class="page-header">Post a Comment</h3>

<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for [@article, @comment] do |f| %>
        <p>
          <%= f.label :author_name, "Name" %><br/>
          <%= f.text_field :author_name %>
        </p>

        <p>
          <%= f.label :body, "Comment" %><br/>
          <%= f.text_area :body %>
        </p>

        <p><%= f.submit 'Submit' %></p>
    <% end %>
  </div>
</div>
